# Server
HOST=127.0.0.1
PORT=5000
FLASK_DEBUG=0

# Security
# Set a stable secret in production-like usage.
APP_SECRET_KEY=replace-with-a-long-random-secret

# Storage backend
DB_BACKEND=sqlite
SQLITE_DB_PATH=./archive_cache.sqlite3

# MySQL settings (used when DB_BACKEND=mysql)
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_DATABASE=wayback_builder
MYSQL_USER=root
MYSQL_PASSWORD=

# Output safety
OUTPUT_ROOT_DIR=./output
ALLOW_UNSAFE_OUTPUT_ROOT=0

# Job/runtime controls
MAX_ACTIVE_JOBS=4
JOB_RETENTION_SECONDS=3600
JOB_CLEANUP_INTERVAL_SECONDS=60
DB_PRUNE_INTERVAL_SECONDS=600
DB_CACHE_RETENTION_SECONDS=1209600
DB_JOBS_RETENTION_SECONDS=2592000

# Archive.org stability controls
WAYBACK_MIN_REQUEST_INTERVAL_MS=250
CDX_CACHE_MAX_ITEMS=5000
